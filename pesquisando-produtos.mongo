// Pesquisando pelos produtos nas lojas
db.lojas.aggregate([{
    $match: {
        nome: "Apple Store"
    }
},{
    $lookup: {
        from: "produtos",
        localField: "produtos",
        foreignField: "_id",
        as: "listaProdutos"
    }
}]).pretty();

